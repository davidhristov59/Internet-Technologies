@model CRUD_MVC.Models.Movie

@{
    ViewBag.Title = "EditMovie";
}

<h2>EditMovie</h2>

@using (Html.BeginForm("EditMovie", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(movie => movie.MovieName)
        @Html.TextBoxFor(movie => movie.MovieName, new { @class = "form-control" })
        @Html.ValidationMessageFor(movie => movie.MovieName)
    </div>

    <div class="form-group">
        @Html.LabelFor(movie => movie.Rating)
        @Html.TextBoxFor(movie => movie.Rating, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(movie => movie.DownloadURL)
        @Html.TextBoxFor(movie => movie.DownloadURL, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(movie => movie.ImageUrl)
        @Html.TextBoxFor(movie => movie.ImageUrl, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Edit</button>
}