@model IEnumerable<DatabaseExample2._5.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="MovieTable" class="table"> <!--dodavame i ID -->
    <!--dodavovme thead-->
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DownloadUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th></th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DownloadUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <img src="@item.ImgUrl" style="max-width:200px; max-height:100px" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MovieID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MovieID }) 
                    @*Html.ActionLink("Delete", "Delete", new { id = item.MovieID }) *@
                    <button data-movie-id="@item.MovieID" class="btn-link js-delete">Delete</button> <!--dodavame atribut-->
                </td>
            </tr>
        }
    </tbody>
</table>

<!--javascript kucam tuka-->

<!--moze i da si gi zemam skriptite od Scripts 
    
    <script src="~..." </script>
    -->

@section scripts{
    
    <script>

        $(document).ready(function () {

            var table = $("#MovieTable").DataTable();
            $("#MovieTable .js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Do you want to delete this movie?", function (result) {
                    if (result) { //ako e yes kliknato
                        $.ajax({
                            //so API , ako sakavme bez API kaj url ke bese /Movies/Delete/
                            url: "/api/MoviesAPI/" + button.attr("data-movie-id"),
                            method: "DELETE", //tuka stavame DELETE za API , bez API ke bese GET metodot
                            success: function () {
                                //da ja izbriseme redicata
                                //parent-ot na ovoj button ke bide cel red
                                table.row(button.parents("tr")).remove().draw(); //briseme elememt od data-tabelata
                            },
                            error: function (err) {
                                console.log(err)
                            }
                        });
                    }
                });
            });
        });

    </script>     
    
    
}