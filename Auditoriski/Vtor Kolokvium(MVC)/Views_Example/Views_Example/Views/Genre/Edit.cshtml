    </div>

    <div>

        @Html.LabelFor(m => m.GenreName)
        @Html.TextBoxFor(m => m.GenreName)
        <br />

    </div>

    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>


} 